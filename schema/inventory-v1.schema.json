{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Inventory Manifest v1",
  "type": "object",
  "properties": {
    "sha256": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    },
    "path": {
      "type": "string"
    },
    "bytes": {
      "type": "integer",
      "minimum": 0
    },
    "content_type": {
      "type": "string"
    },
    "width": {
      "type": "integer",
      "minimum": 1
    },
    "height": {
      "type": "integer",
      "minimum": 1
    },
    "logical_id": {
      "type": "string"
    },
    "etag": {
      "type": "string"
    }
  },
  "required": [
    "sha256",
    "path",
    "bytes",
    "content_type"
  ],
  "additionalProperties": false
}